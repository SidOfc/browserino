# puts '------------------'
# puts @agent.engine_name
# puts @agent.engine_version
# puts '------------------'
# puts '|      system    |'
# puts '------------------'
# puts @agent.system_name
# puts @agent.system_name(full: true)[1]
# puts @agent.system_version
# puts @agent.system_architecture
